program ::= stmtList:s {: RESULT = new SMPLProgram(s); :};

stmtList ::= stmtList:seq stmt:s {:
				seq.addStatement(s);
				RESULT = seq;
			:} |
			empty {:
				RESULT = new SMPLSequence();
			:}

stmt ::= expression:e {: RESULT = e; :} |
		selection:s {: RESULT = s; :} |
		assign:a {: RESULT = a; :} |
		multipleAssign:m {: RESULT = m; :} |
		definition:d {: RESULT = d; :} ;

selection ::= case:c {: RESULT = c; :} |
			if:i {: RESULT = i; :};

expression ::= expression:e OR:o conditionAnd:c {: RESULT = new SMPLCondition(e, c, o); :} |
			body:b {: RESULT = b; :} |
			conditionalAnd:c {: RESULT = c; :};

// conditionals
conditionalAnd ::= conditionalAnd:ca AND:a conditionalNot:cn {:
				RESULT = new SMPLCondition(ca, cn, a); 
			:} |
			conditionalNot:c {: RESULT = c; :};

// might have to change this
// CIRExp doing a lot, could use a diff class
conditionalNot ::= NOT:n predExp:p {: RESULT = new SMPLCondition(p, n) :} |
				predExp:b {: RESULT = p; :};

predExp ::= predExp:p CMP:c bitExp:e {: RESULT = new CIRExp(p, e, c); :} |
			bitExp:b {: RESULT = b; :};

bitExp ::= bitExp:b BITOR:op EXPRESSION


// not sure about this
// the body of the func can be a { stmts } or stmt
body := LBRACE stmtList:seq RBRACE {: RESULT = seq; :} |
		stmt:s {: RESULT = s; :};

// case statements

case := CASE LBRACE caseStmts:seq RBRACE {: RESULT = new SMPLCaseStmt(seq); :};

caseStmts := caseStmts:seq COMMA caseExp:ce {: 
				seq.add(ce);
				RESULT = seq;
			:} |
			caseExp:ce {:
				ArrayList<SMPLStatement> lst = new ArrayList<>();
				lst.add(ce);
				RESULT = lst;
			:} |
			empty; // not sure if this breaks it, how do u return nothing?

caseExp := expression:exp1 COLON expression:exp2 {: RESULT = new SMPLCaseExp(exp1, exp2); :} |
		ELSE COLON expression:e {: RESULT = new SMPLCaseExp(e); :};


// single assign

assign ::= DEF VAR:v expression:e {: RESULT = new SMPLAssign(v, e); } |
			DEF VAR:v ASSIGN expression:e {: RESULT = new SMPLAssign(v, e); };

// multiple assign

mulAssign := varList:lst ASSIGN expression:e {: RESULT = new SMPLMulAssign(lst, e); };

varList ::= varList:lst COMMA VAR:v {: 
			lst.add(v);
			RESULT = lst;
		:} |
		VAR:v {:
			ArrayList<String> lst = new ArrayList<>();
			lst.add(v);
			RESULT = v;
		:};
		
condStmt ::= IF predExp:cex THEN stmtList:cons {:
				RESULT = new SMPLCondStmt(cex, cons);
			:} |
			IF predExp:cex THEN stmtList:cons ELSE stmtList:alt {:
				RESULT = new SMPLCond(cex, cons, alt);
			:};


