/* Terminals */

// special symbols
terminal LBRACKET,RBRACKET,LPAREN, RPAREN,COMMA, LBRACE, RBRACE, SEMI, COLON;

// functions
terminal DEF, PROC, LAZY;

// aithmetic
terminal PLUS, MINUS, DIV, MOD, TIMES;

//Builtin Statements
terminal PRINT, PRINTLN, READ, READINT, CASE;

